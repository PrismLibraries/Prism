<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net9.0;net10.0</TargetFrameworks>
    <ImplicitUsings>true</ImplicitUsings>
    <Description>Prism.Maui.Rx is a support package for .NET MAUI developers. This package provides some helpers to access an IObservable for globally handling Navigation Request Results.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <UseMaui>true</UseMaui>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Prism.Maui\Prism.Maui.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Reactive" />
  </ItemGroup>

  <Choose>
    <When Condition="$(TargetFramework.StartsWith('net9'))">
      <ItemGroup>
        <PackageReference Include="Microsoft.Maui.Controls" VersionOverride="9.0.110" />
      </ItemGroup>
    </When>
    <When Condition="$(TargetFramework.StartsWith('net10'))">
      <ItemGroup>
        <PackageReference Include="Microsoft.Maui.Controls" VersionOverride="10.0.10" />
      </ItemGroup>
    </When>
  </Choose>

</Project>
